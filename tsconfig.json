{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "noEmit": true
  },
  "exclude": [
    "**/*.spec.ts",
    "node_modules",
    "vendor",
    "public"
  ],
  "paths": {
  "@/*": ["app/javascript/src/*"],
  "@admin/*": ["app/javascript/src/apps/admin/*"],
  "@application/*": ["app/javascript/src/apps/application/*"],
  "@shared": ["app/javascript/src/shared"],
  "@shared/*": ["app/javascript/src/shared/*"]
},

  "compileOnSave": false
}
